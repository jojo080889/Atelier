<div class="metanav">
  <% if user_signed_in? %>
    Welcome, <%= link_to current_user.username, current_user, class: "profile-link" %>!
    <% if current_user.forem_admin? %>
      <%= link_to "Forem Admin Area", forem.admin_root_path %>
    <% end %>
    <%= link_to "Sign out", main_app.destroy_user_session_path, :method => :delete %>
  <% else %>
    <%= link_to "Sign in", main_app.new_user_session_path %> 
    <%= link_to "Sign up", main_app.new_user_registration_path %>
  <% end %>
</div>
  
<nav class="navbar navbar-default" role="navigation">
  <div class="navbar-header">
    <a class="navbar-brand" href="/">atelier</a>
  </div>
  <div class="collapse navbar-collapse">
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "Post a Project", main_app.new_project_path %></li>
      <li><%= link_to "Mentor a Project", main_app.projects_path %></li>
      <% if user_signed_in? %>
        <li><%= link_to "Profile", main_app.user_path(current_user) %></li>
        <li><%= link_to "Forums", main_app.forem_path %></li>
        <%= form_tag main_app.search_projects_path, method: :get, class: "navbar-form navbar-left", role: "search" do %>
          <div class="form-group">
            <input type="text" id="search" name="search" class="form-control" placeholder="Search" />
          </div>
          <button type="submit" class="btn btn-default">
            <%= fa_icon "search" %>
          </button>
        <% end %>
      <% end %>
    </ul>
  </div>
</nav>
